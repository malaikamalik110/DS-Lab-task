#include <iostream>
using namespace std;


int generateCode(int n) {
    if (n == 0) return 1; 
    int product = 1;
    for (int i = n; i > 0; i--) {
        product *= i;
    }
    return product;
}

int main() {
    
    int (*codePtr)(int) = generateCode;

    int input;
    cout << "Enter a number: ";
    cin >> input;

    
    int secretCode = codePtr(input);

    cout << "Your secret code is: " << secretCode << endl;

    return 0;
}
